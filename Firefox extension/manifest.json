{
    "manifest_version": 2,
    "name": "Hide and Verify Input Values",
    "version": "1.0",
    "description": "Hides certain input values and verifies them.",
    "permissions": [
      "activeTab"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html"
    }
  }
  